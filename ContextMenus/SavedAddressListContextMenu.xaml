<ContextMenu x:Class="AssEmbly.DebuggerGUI.ContextMenus.SavedAddressListContextMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssEmbly.DebuggerGUI.ContextMenus"
             mc:Ignorable="d"
             FontFamily="Segoe UI" Foreground="White">
    <ContextMenu.Resources>
        <Style TargetType="local:SavedAddressListContextMenu" BasedOn="{StaticResource {x:Type ContextMenu}}"/>
    </ContextMenu.Resources>
    <MenuItem x:Name="removeItem" Header="Remove Saved Address" Click="RemoveItem_Click" Visibility="Collapsed">
        <MenuItem.Icon>
            <Image Source="pack://application:,,,/Icons/address-book--minus.png"/>
        </MenuItem.Icon>
    </MenuItem>
    <Separator/>
    <MenuItem Header="Save New Address" Click="AddItem_Click">
        <MenuItem.Icon>
            <Image Source="pack://application:,,,/Icons/address-book--plus.png"/>
        </MenuItem.Icon>
    </MenuItem>
</ContextMenu>
